<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:imageEditor="clr-namespace:Syncfusion.Maui.ImageEditor;assembly=Syncfusion.Maui.ImageEditor"
             xmlns:local="clr-namespace:ImageEditorPenAnnotation"
             x:Class="ImageEditorPenAnnotation.MainPage">

    <ContentPage.Behaviors>
        <local:ImageEditorBehavior />
    </ContentPage.Behaviors>
    
    <Grid>
        <imageEditor:SfImageEditor x:Name="imageEditor"
                                   Source="image.jpg">
        </imageEditor:SfImageEditor>
    </Grid>

</ContentPage>
